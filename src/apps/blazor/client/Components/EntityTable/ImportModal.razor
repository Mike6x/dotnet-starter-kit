<EditForm Model="@RequestModel" OnValidSubmit="SaveAsync">
    <MudDialog>

        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Input" Class="mr-3 mb-n1" Color="@Color.Primary"/>
                @ModelName Importing
            </MudText>
        </TitleContent>

        <DialogContent>
            <DataAnnotationsValidator />
            <FshValidation @ref="_customValidation" />
            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudToggleIconButton @bind-Toggled="IsUpdate"
                                         Icon="@Icons.Material.Filled.AddCircleOutline"
                                         Color="@Color.Primary"
                                         ToggledIcon="@Icons.Material.Filled.Edit"
                                         ToggledColor="@Color.Tertiary"
                                         title="@(IsUpdate ? "Update" : "Add")" />
                    
                    <span>As @(IsUpdate ? "Update Items" : "New Items")</span>
                </MudItem>
                <MudItem xs="12" md="12">
                    <InputFile id="fileInput" hidden OnChange="UploadFiles" accept=".xlsx"/>
                    <br/>
                    @if (_file != null)
                    {
                        <MudAlert ShowCloseIcon="true" CloseIconClicked="(() => _file = null)" OnClick="(() => _file = null)">@_file.Name</MudAlert>
                    }
                    else
                    {
                        <MudAlert Severity="Severity.Normal">Please click to UPLOAD button for selecting a excel file!</MudAlert>
                    }
                </MudItem>
            </MudGrid>
        </DialogContent>

        <DialogActions>
            <MudButton
                HtmlTag="label"
                Variant="Variant.Filled"
                Color="Color.Info"
                StartIcon="@Icons.Material.Filled.CloudUpload"
                for="fileInput">Upload
            </MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" OnClick="MudDialog.Cancel">Cancel</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Update" Color="Color.Tertiary" Class="mr-4"
                       ButtonType="ButtonType.Submit" Disabled="@(_file == null)">Import</MudButton>
        </DialogActions>
    </MudDialog>

    <MudOverlay Visible="_uploading" LightBackground="true" Absolute="true">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </MudOverlay>
</EditForm>